<fieldset>
<legend><%= record.kind %>: <%= record.name %></legend>

<% if (record.classdesc) { %>
  <%- record.classdesc %>
<% } %>


<% if (record.kind === 'function') { %>
  <%-
    include('../components/function', {
      func: record,
      helpers: helpers,
    });
  %>
<% } %>

<% if (record.isEnum) { %>
  <p>
    <%- record.description %>
  </p>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Value</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% record.properties.forEach(prop => { %>
        <tr>
          <td><%= prop.name %></td>
          <td><%- helpers.link.type(prop.type.names.join(', ')) %></td>
          <td><%- prop.defaultvalue %></td>
          <td><%- prop.description %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>

<% if (record.kind === 'class') { %>
  <% if (record.$methods && record.$methods.length) { %>
    <h2>Methods summary</h2>
    <hr />
    <table>
      <thead>
        <tr>
          <th colspan="2">Public methods</th>
        </tr>
      </thead>
      <tbody>
      <% record.$methods.forEach(method => { %>
        <tr>
          <td></td>
          <td>
            <%-
              include('../components/function-signature', {
                func: method,
                helpers: helpers,
                linkTo: `#${method.slug}`,
              });
            %>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>
  <% if (record.$attributes && record.$attributes.length) { %>
    <h2>Properties</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
      <% record.$attributes.forEach(attribute => { %>
        <tr>
          <td><%= attribute.name %></td>
          <td>
            <% 
              if (attribute && attribute.type && attribute.type.names) {
                attribute.type.names.forEach(type => {
            %>
              <%- helpers.link.type(type) %>
            <%
                });
              }
            %>
          </td>
          <td><%- attribute.description %></td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>

  <h2>Methods</h2>
  <hr />
  <% record.$methods.forEach(method => { %>
    <%-
      include('../components/function', {
        func: method,
        helpers: helpers,
      });
    %>
    <br/>
  <% }); %>
<% } %>

<button data-spoiler-button="<%= record.___id %>">toggle</button>
<pre data-spoiler="<%= record.___id %>" style="display: none;">
  <%- JSON.stringify(record, null, 4).replace(/\n/g, '<br>') %>
</pre>
</fieldset>
